## setup helm repo
helm repo add rancher-latest https://releases.rancher.com/server-charts/latest

## create namespace
kubectl create namespace cattle-system


# Install the CustomResourceDefinition resources separately
kubectl apply -f https://raw.githubusercontent.com/jetstack/cert-manager/release-0.12/deploy/manifests/00-crds.yaml

# Create the namespace for cert-manager
kubectl create namespace cert-manager

# Add the Jetstack Helm repository
helm repo add jetstack https://charts.jetstack.io

# Update your local Helm chart repository cache
helm repo update

# Install the cert-manager Helm chart
helm install \
  cert-manager jetstack/cert-manager \
  --namespace cert-manager \
  --version v0.12.0
  
## test cert manager
kubectl get pods --namespace cert-manager

## install rancher!
helm install rancher rancher-latest/rancher \
  --namespace cattle-system \
  --set hostname=rancher.domain.com
## helm airgap own CA
helm install rancher rancher-stable/rancher --namespace cattle-system --set hostname=rancher.my.org --set ingress.tls.source=secret --set privateCA=true --set rancherImage=fullimagename/rancher/rancher --set imagePullSecrets=['azurecr']

  
## wait for deployment to finish
kubectl -n cattle-system rollout status deploy/rancher


imagePullSecrets:
  - name: azurecr
hostname: rancher.domain.com
ingress.tls.source: secret 
privateCA: true
rancherImage: fullimagename/rancher/rancher
